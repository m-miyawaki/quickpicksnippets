{
  "name": "quickpicksnippets",
  "displayName": "QuickPickSnippets",
  "description": "insert a snippet from QuickPick list",
  "publisher": "miyawaki",
  "repository": {
    "url": "https://github.com/m-miyawaki/quickpicksnippets",
    "type": "git"},
 "license": "MIT-0",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:extension.quickpicksnippets"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.quickpicksnippets",
        "title": "quickpicksnippets"
      }
    ],
    "configuration":{
      "title": "quickPickSnippets",
      "properties": {
        "quickpicksnippets.snippets":{
          "type":"array"
        },
        "quickpicksnippets.addToEditorContextMenu":{
          "type":"boolean",
          "description": "Add this command to the editor's context menu"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && !editorReadonly",
          "command": "extension.quickpicksnippets",
          "group": "5_quickpicksnippets"
        }
      ]
    }
    
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
